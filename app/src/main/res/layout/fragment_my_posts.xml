<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.www.funone.fragments.MyPostsFragment">

    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/group" />

        <com.www.funone.view.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_20"
            android:text="@string/my_posts_empty"
            android:textSize="@dimen/text_size_questions"
            app:custom_font="RobotoRegular" />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_my_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"/>


</RelativeLayout>
